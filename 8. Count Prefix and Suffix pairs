class Solution {
public:
    int countPrefixSuffixPairs(vector<string>& words) {
        int n = words.size();
        int count = 0;
        for(int i=0;i<n;i++){
            string s1 = words[i];

            for(int j=i+1;j<n;j++){
                string s2 = words[j];

             if(s1.length()>s2.length()) continue;

             // prefix 
             string pre = s2.substr(0,s1.length());
             // suffix
             string suff = s2.substr(s2.length()-s1.length());

             if(pre==s1 && suff == s1) count++;
            }
        }
        return count;
    }
};
